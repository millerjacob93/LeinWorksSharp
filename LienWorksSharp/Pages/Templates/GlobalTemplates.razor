@page "/templates/global"
@inherits LienWorksSharp.Pages.GlobalTemplatesPage

<PageTitle>Global Templates | LienWorksSharp</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Global Templates</h1>
        <p class="text-muted mb-0">Master templates for all clients. Uploads and history are tracked per document type.</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 25%;">Document</th>
                    <th style="width: 35%;">Current Template</th>
                    <th style="width: 25%;">Download</th>
                    <th style="width: 15%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in DocumentTypes)
                {
                    var current = GetCurrent(doc);
                    <tr>
                        <td class="fw-semibold">@doc.ToDisplayName()</td>
                        <td>
                            @if (current != null)
                            {
                                <span>@current.FileName</span>
                                <small class="text-muted d-block">Updated @current.UploadedAt.ToLocalTime().ToString("g")</small>
                            }
                            else
                            {
                                <span class="text-muted">No template uploaded</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary btn-sm" href="@(current != null ? TemplateService.GetDownloadPath(current) : "#")" target="_blank">
                                <span class="oi oi-data-transfer-download me-1"></span>Download
                            </a>
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <button class="btn btn-primary btn-sm" @onclick="() => OpenUploadModal(doc)">Upload / Replace</button>
                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => OpenHistory(doc)">History</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (ShowUploadModal && UploadingType.HasValue)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upload @UploadingType.Value.ToDisplayName()</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseUploadModal"></button>
                </div>
                <div class="modal-body">
                    <InputFile OnChange="OnFileSelected" />
                    @if (!string.IsNullOrWhiteSpace(SelectedFileName))
                    {
                        <p class="mt-2 text-muted">Selected: @SelectedFileName</p>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-link" type="button" @onclick="CloseUploadModal">Cancel</button>
                    <button class="btn btn-primary" type="button" @onclick="SaveTemplateAsync" disabled="@(!CanUpload)">Upload</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (ShowHistoryModal && HistoryType.HasValue)
{
    var history = Histories[HistoryType.Value];
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@HistoryType.Value.ToDisplayName() History</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseHistory"></button>
                </div>
                <div class="modal-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>File Name</th>
                                <th>Uploaded</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (history?.Versions.Any() == true)
                            {
                                @foreach (var version in history.Versions)
                                {
                                    var isCurrent = history.CurrentId == version.Id;
                                    <tr class="@(isCurrent ? "table-success" : string.Empty)">
                                        <td>@version.FileName</td>
                                        <td>@version.UploadedAt.ToLocalTime().ToString("g")</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <a class="btn btn-sm btn-outline-secondary" href="@TemplateService.GetDownloadPath(version)" target="_blank">Download</a>
                                                @if (!isCurrent)
                                                {
                                                    <button class="btn btn-sm btn-primary" @onclick="() => UseVersionAsync(HistoryType!.Value, version.Id)">Use this</button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted p-3">No uploads yet.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-link" type="button" @onclick="CloseHistory">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}
